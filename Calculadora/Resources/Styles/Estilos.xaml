<?xml version="1.0" encoding="utf-8" ?>
<?xaml -comp compile=true?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora.Resources.Styles.Estilos">
 
    <Style TargetType="Button" x:Key="BaseButton">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark={StaticResource Black}, Light={StaticResource White}}"/>
    </Style>
    
    <Style TargetType="Button" x:Key="btnYellow" BasedOn="{StaticResource BaseButton}">
        <Setter Property="TextColor" Value="Yellow"/>
    </Style>
    
    <Style TargetType="Button" x:Key="btnDarkMode">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="Black"/>
    </Style>
</ResourceDictionary>